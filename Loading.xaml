<Window x:Class="WpfApplication2.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:props="clr-namespace:WpfApplication2.Properties"
        Height="263" Width="401" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"      
        WindowStartupLocation="Manual" ShowInTaskbar="True" >
    <Window.Background>
        <SolidColorBrush Color="Gray" Opacity="0.7" />
    </Window.Background>
    
    <Grid>
        <Grid x:Name="mainGrid" Height="100" Width="100">
            <Label x:Name="loadingStatus" Content="Loading" Foreground="BlanchedAlmond" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
